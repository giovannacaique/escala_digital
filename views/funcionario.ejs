<link rel="stylesheet" href="../css/cad-fun.css">

<a class="btns" href="/cadastro/empresa">
    <span>Voltar</span>
</a>

<div class="container">
    <h2>Cadastro de Funcionário</h2>
    <form id="cadastrarFunForm" method="post" action="/cadastro/funcionario">
        <div>
            <label for="nomeFuncionario">Nome do Funcionário</label>
            <input type="text" id="nomeFuncionario" name="nome_fun" required>
        </div>
        <div>
            <label>Status</label>
            <div class="radio-group">
                <input type="radio" id="ativo" name="func_status" value="Ativo" required>
                <label for="ativo">Ativo</label>
                <input type="radio" id="inativo" name="func_status" value="Inativo" required>
                <label for="inativo">Inativo</label>
            </div>
            <label for="dataAdmissao">Data de Admissão</label>
            <input class="esq" type="date" id="dataAdmissao" name="data_admissao" required>
        </div>
        <div>
            <label>Turno</label>
            <select id="turno" name="turno" required>
                <option value="Manhã">Manhã</option>
                <option value="Tarde">Tarde</option>
                <option value="Noite">Noite</option>
            </select>
        </div>
        <div>
            <label for="nomeEmpresa">Nome da Empresa</label>
            <input type="text" id="nomeEmpresa" name="nome_empresa" required>
        </div>
        <div>
            <label for="cpf">CPF</label>
            <input type="text" id="cpf" name="cpf" required>
        </div>
        <div>
            <label for="rg">RG</label>
            <input type="text" id="rg" name="rg" required>
        </div>
        <div>
            <label for="carteiraTrabalho">Carteira de Trabalho</label>
            <input type="text" id="carteiraTrabalho" name="cart_trabalho" required>
        </div>
        <div>
            <label for="cargaHoraria">Carga Horária</label>
            <input type="number" id="cargaHoraria" name="car_horaria" required>
        </div>
        <div>
            <label for="sexo">Sexo</label>
            <select id="sexo" name="sexo" required>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
                <option value="Outro">Outro</option>
            </select>
        </div>
        <div>
            <label for="setor">Setor</label>
            <input type="text" id="setor" name="setor" required>
        </div>
        <div>
            <label for="observacoes">Observações</label>
            <textarea id="observacoes" name="observacoes" rows="4"></textarea>
        </div>
        <a class="cancelar" href="/cadastro/empresa">
            <span id="cancelar">Cancelar</span>
        </a>
            <button type="submit" class="cadastrar">Cadastrar</button>
    </form>
</div>

<div id="messageFun" style="display: none;"></div>

<%- include('./partials/footer') %>