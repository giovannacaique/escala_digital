<%- include('./partials/head') %>

    <a class="btns" href="/login">
        <span>Voltar</span>
    </a>

    <div class="cadastro-container">
        <h1>Cadastro Funcionário</h1>
        <form>
            <label for="empresa" class="esq">Nome do Funcionário</label>
            <input type="text" id="empresa" class="esq" name="empresa" placeholder="Nome da Empresa" required>

            <label for="cpf" class="esq">CPF:</label>
            <input type="text" id="cpf" class="esq" name="cpf" placeholder="CPF" required>

            <label for="razao-social" class="esq">Razão Social:</label>
            <input type="text" id="razao-social" class="esq" name="razao-social" placeholder="Razão Social" required>

            <label for="email" class="esq">Email:</label>
            <input type="email" id="email" class="esq" name="email" placeholder="Email" required>

            <label for="confirm-email">Confirmar Email:</label>
            <input type="email" id="confirm-email" name="confirm-email" placeholder="Confirmar Email" required>

            <label for="senha" class="esq">Senha:</label>
            <input type="password" id="senha" class="esq" name="senha" placeholder="Senha" required>

            <label for="confirm-senha">Confirmar Senha:</label>
            <input type="password" id="confirm-senha" name="confirm-senha" placeholder="Confirmar Senha" required>

            <label for="funcionarios">Quantidade de Funcionários:</label>
            <input type="number" id="funcionarios" name="funcionarios" placeholder="Quatidade de Funcionários" required>

            <label for="codigo-postal" class="esq">Código Postal:</label>
            <input type="text" id="codigo-postal" class="esq" name="codigo-postal" placeholder="Código Postal" required>

            <label for="pais">País:</label>
            <input type="text" id="pais" name="pais" placeholder="País" required>

            <label for="bairro" class="esq">Bairro:</label>
            <input type="text" id="bairro" class="esq" name="bairro" placeholder="Bairro" required>

            <label for="logradouro">Logradouro:</label>
            <input type="text" id="logradouro" name="logradouro" placeholder="Logradouro" required>

            <label for="estado">Estado:</label>
            <input type="text" id="estado" name="estado" placeholder="Estado" required>

            <label for="cidade">Cidade:</label>
            <input type="text" id="cidade" name="cidade" placeholder="Cidade" required>

            <label for="numero-casa">Número da Casa:</label>
            <input type="text" id="numero-casa" name="numero-casa" placeholder="Número da Casa" required>

            <div class="buttons">
                <a type="submit" href="/">
                    <button id="cancelar">Cadastrar</button>
                </a>
                <a href="/">
                    <span id="cancelar">Cancelar</span>
                </a>
            </div>
        </form>
    </div>

    <%- include('./partials/footer') %>